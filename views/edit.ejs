<%- include ('./base/header.ejs') %>
  <%- include ('./base/navbar.ejs') %>

    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="alert alert-primary text-center my-3" role="alert">
          <h4 class="text-center">Update Your Record</h4>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row mt-4">
        <div class="col"></div>
        <div class="col">
          <form action="/update/<%= record._id %>" method="post">
            <div class="my-3">
              <label for="" class="form-label">Name</label>
              <input type="text" class="form-control" name="name" value="<%= record.name %>" id="" aria-describedby="helpIdName"
                placeholder="" />
              <small id="helpIdName" class="form-text text-muted">Help text</small>
            </div>
            <div class="my-3">
              <label for="" class="form-label">City</label>
              <input type="text" class="form-control" name="city" value="<%= record.city %>" id="" aria-describedby="helpIdCity"
                placeholder="" />
              <small id="helpIdCity" class="form-text text-muted">Help text</small>
            </div>
            <div class="my-3">
              <label for="" class="form-label">Email</label>
              <input type="text" class="form-control" name="email" value="<%= record.email %>" id="" aria-describedby="helpIdEmail"
                placeholder="" />
              <small id="helpIdEmail" class="form-text text-muted">Help text</small>
            </div>
            <div class="my-3">
              <label for="" class="form-label">Contact</label>
              <input type="text" class="form-control" name="contact" value="<%= record.contact %>" id="" aria-describedby="helpIdContact"
                placeholder="" />
              <small id="helpIdContact" class="form-text text-muted">Help text</small>
            </div>

            <input type="submit" value="Update Record" class="btn btn-warning w-100">
          </form>
        </div>
        <div class="col"></div>
      </div>
    </div>

    <%- include ('./base/footer.ejs') %>